generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Category {
  id           String @id @default(uuid())
  name         String
  oneMonth     Float  @default(0.00)
  threeMonth   Float  @default(0.00)
  semiAnnual   Float  @default(0.00)
  yearly       Float  @default(0.00)
  MLSemiAnnual Float  @default(0.00)
  MLyearly     Float  @default(0.00)
  User         User[]
}

enum UserRole {
  user
  admin
}

model User {
  id       String   @id @default(uuid())
  userId   String
  userName String
  email    String
  src      String
  name     String   @db.Text
  role     UserRole

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String

  UserSubscription   UserSubscription[]

  @@index([categoryId])
  @@fulltext([name])
}

model Product {
  id                 String  @id @default(uuid())
  productName        String
  productDescription String  @db.Text
  cost               Float   @default(0.00)
  subscription       Boolean
  promoCode          String
  UserSubscription   UserSubscription[]
}

model UserSubscription {
  id                     String    @id @default(cuid())
  user                   User      @relation(fields: [userId], references: [id])
  userId                 String    
  product                Product   @relation(fields: [productId], references: [id])
  productId              String    
  stripeCustomerId       String?   
  stripeSubscriptionId   String?   
  stripePriceId          String?   @map(name: "stripe_price_id")
  purchaseStatus         Int?      @default(0)
  stripeCurrentPeriodEnd DateTime? @map(name: "stripe_current_period_end")
}
